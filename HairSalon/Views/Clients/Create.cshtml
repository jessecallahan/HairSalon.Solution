@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

@using (Html.BeginForm())
{
  <li>
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
</li>
  <li>
  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone)
</li>
  <li>
  @Html.LabelFor(model => model.Notes)
  @Html.TextAreaFor(model => model.Notes)
</li>
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new Client" class="btn btn-success" />
}
<p>@Html.ActionLink("Show all clients", "Index")</p>